@using Swampy.Admin.Web.HtmlHelpers
@using Swampy.Admin.Web.Models
@model Swampy.Admin.Web.Models.Operation.EnvironmentInputModel
@{
    ViewBag.Title = Model.Id.HasValue ? "Edit Environment" : "Create Environment";
    Layout = "~/Views/Shared/_LayoutFluid.cshtml";    
}

@section scripts {
   
}

@section styles {}


@using (Html.BeginForm("Edit", "Environment", FormMethod.Post))
{
        
    <fieldset class="input-xxlarge">
        <legend>@ViewBag.Title</legend>
        
        
        @Html.HiddenFor(model => model.Id)

        @Html.BootstrapTextboxFor(model => model.Name, new { @class="input-xxlarge"})

        @Html.BootstrapTextboxFor(model => model.Domain, new { @class="input-xxlarge"})

        @Html.BootstrapTextAreaEditorFor(model => model.Description, 5, 20,  new { @class="input-xxlarge"})
                
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save changes</button>
            @Html.ActionLink("Cancel", "Index", "Environment", null, new { @class = "btn" })
        </div>
    </fieldset>
}

