@using Swampy.Admin.Web.HtmlHelpers
@model Swampy.Admin.Web.Models.ConfigurationItemInputModel

@{
    Layout = null;
}


<div class="modal hide fade" role="dialog" id="create-configurationitem">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3>Add New Configuration</h3>
    </div>


    @using (Html.BeginForm("AddConfigurationItem", "Environment", FormMethod.Post))
    {
        <div class="modal-body">
            <fieldset>
                <legend>Add</legend>

                @Html.HiddenFor(x => x.EnvironmentId)

                @Html.HiddenFor(x => x.Id)

                @Html.BootstrapEditorFor(x => x.Name)

                @Html.BootstrapEditorFor(x => x.Value)

                @Html.BootstrapEditorFor(x => x.Type)
            </fieldset>

            <div class="modal-footer">
                <a href="#" class="btn" data-dismiss="modal">Close</a>
                <a href="~/Environment/AddConfigurationItem" id="save-configurationitem" class="btn btn-primary">Save changes</a>
            </div>
        </div>
    }


</div>

