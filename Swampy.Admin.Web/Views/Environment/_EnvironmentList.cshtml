@using Swampy.Admin.Web.Models
@model Swampy.Admin.Web.Models.ReadModels.EnvironmentReadModel
<ul class="nav nav-tabs">
    
    @foreach (string environment in Model.AllEnvironments)
    {
        <li>
            <a href="/Environment?environmentName=@environment" data-toggle="tab" 
                @if(environment == Model.EnvironmentName)
                {
                    @: class="tab-pane active"
                }
                else
                {
                    @: class="tab-pane"
                }
                />                                                                                                                             
                                                                                                      
        </li>
    }
</ul>
